// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id      Int    @id @default(autoincrement())
  title   String
  content String
}

model Contact {
  id      Int    @id @default(autoincrement())
  name    String
  email   String
  subject String
  message String
}
